<!DOCTYPE html>
<html>
  <%- include('../../partials/header')%>
<body>
  <%- include('../../partials/navigation')%>

  <%- include('../../partials/sidebar')%>

	<div class="login-wrap d-flex align-items-center flex-wrap justify-content-center">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-md-6">
					<img src="/backend/vendors/images/forgot-password.png" alt="">
				</div>
				<div class="col-md-6">
					<div class="login-box bg-white box-shadow border-radius-10">
						<div class="login-title">
							<h2 class="text-center text-primary">User Permission Update</h2>
						</div>
						<form action="/admin/users/permission-update/<%= id %>" method="POST">
							<div class="input-group custom">
                                <label>Select Permission</label>
                                <select class="custom-select2 form-control" name="role" style="width: 100%; height: 35px;">    	
                                    <option value="ADMIN">ADMIN</option>
                                    <option value="MANAGER">MANAGER</option>
                                    <option value="USER">USER</option>
                                </select>
							</div>
							<div class="row align-items-center">
								<div class="col-5">
									<div class="input-group mb-0">										
											<!-- use code for form submit -->
										<input class="btn btn-primary btn-lg btn-block" type="submit" value="Submit">
										<!-- <a class="btn btn-primary btn-lg btn-block" href="index.html">Submit</a> -->
									</div>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- js -->
  <%- include('../../partials/script')%>
</body>
</html>