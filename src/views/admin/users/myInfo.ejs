<!DOCTYPE html>
<html>
<%- include('../../partials/header')%>
<body>
  <%- include('../../partials/navigation')%>

  <%- include('../../partials/sidebar')%>

	<div class="main-container">
		<div class="pd-ltr-20 xs-pd-20-10">
			<div class="min-height-200px">
				<div class="page-header">
					<div class="row">
						<div class="col-md-12 col-sm-12">
							<div class="title">
								<h4>Profile</h4>
							</div>
							<nav aria-label="breadcrumb" role="navigation">
								<ol class="breadcrumb">
									<li class="breadcrumb-item"><a href="/admin">Home</a></li>
                                    <li class="breadcrumb-item"><a href="/admin/users/profile">My Profile</a></li>
								</ol>
							</nav>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 mb-30">
						<div class="pd-20 card-box height-100-p">
							<div class="profile-photo">
								<a href="modal" data-toggle="modal" data-target="#modal" class="edit-avatar"><i class="fa fa-eye"></i></a>
								<% if( image == '') { %>
									<img src="/uploads/noimage.png" alt="" class="avatar-photo">
									<% }else { %>
									<img src="/uploads/images/profiles/<%= id %>/<%= image %>" alt="" class="avatar-photo">
								<% } %>
								<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
									<div class="modal-dialog modal-dialog-centered" role="document">
										<div class="modal-content">
											<div class="modal-body pd-5">
												<div class="img-container">
													<% if( image == '') { %>
														<img id="image" src="/uploads/noimage.png" alt="Picture">
														<% }else { %>
															<img id="image" src="/uploads/images/profiles/<%= id %>/<%= image %>" alt="Picture">
													<% } %>
												</div>
											</div>
											<div class="modal-footer">
												<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
											</div>
										</div>
									</div>
								</div>
							</div>
							<% if( firstname == '' & lastname == '') { %>
								<h5 class="text-center h5 mb-0">Update your profile</h5>
							<% } else { %>
								<h5 class="text-center h5 mb-0"><%= firstname %> <%= lastname %></h5>
							<% } %>
							<% if(address == '') { %>
								<p class="text-center text-muted font-14">Update your profile</p>
							<% } else { %>
								<p class="text-center text-muted font-14"><%= address %></p>
							<% } %>
							<div class="profile-info">
								<h5 class="mb-20 h5 text-blue">Contact Information</h5>
								<ul>
									<li>
										<span>Username:</span>
										<%= username %>
									</li>
									
									<li>
										<span>Email Address:</span>
										<%= email %>
									</li>

									<li>
										<span>Contact:</span>
										<% if(contact == '') { %>
											<p>Update your profile</p>
										<% } else { %>
											<%= contact %>
										<% } %>
									</li>

									<li>
										<span>Phone:</span>
										<% if(phone == '') { %>
											<p>Update your profile</p>
										<% } else { %>
											<%= phone %>
										<% } %>
									</li>
									<li>
										<span>Address:</span>
										<% if(address == '') { %>
											<p>Update your profile</p>
										<% } else { %>
											<%= address %>
										<% } %>
									</li>
									<li>
										<span>City:</span>
										<% if(city == '') { %>
											<p>Update your profile</p>
										<% } else { %>
											<%= city %>
										<% } %>
									</li>
									<li>
										<span>Province:</span>
										<% if(province == '') { %>
											<p>Update your profile</p>
										<% } else { %>
											<%= province %>
										<% } %>
									</li>
									<li>
										<span>Country:</span>
										<% if(country == '') { %>
											<p>Update your profile</p>
										<% } else { %>
											<%= country %>
										<% } %>
									</li>
									<li>
										<span>Biography:</span>
										<% if(bio == '') { %>
											<p>Update your profile</p>
										<% } else { %>
											<%= bio %>
										<% } %>
									</li>
								</ul>
							</div>
							<div class="profile-social">
								<h5 class="mb-20 h5 text-blue">Social Links</h5>
								<ul class="clearfix">
									<li><a href="#" class="btn" data-bgcolor="#3b5998" data-color="#ffffff"><i class="fa fa-facebook"></i></a></li>
									<li><a href="#" class="btn" data-bgcolor="#1da1f2" data-color="#ffffff"><i class="fa fa-twitter"></i></a></li>
									<li><a href="#" class="btn" data-bgcolor="#f46f30" data-color="#ffffff"><i class="fa fa-instagram"></i></a></li>
								</ul>
							</div>
							
						</div>
					</div>

					
					<div class="col-xl-8 col-lg-8 col-md-8 col-sm-12 mb-30">
						<div class="card-box height-100-p overflow-hidden">
							<div class="profile-tab height-100-p">
								<div class="tab height-100-p">
									<ul class="nav nav-tabs customtab" role="tablist">
										<li class="nav-item">
											<a class="nav-link active" data-toggle="tab" href="#profile" role="tab">Profile</a>
										</li>
									</ul>
									<div class="tab-content">
										<!-- Setting Tab start -->
										<div class="tab-pane fade show active height-100-p" id="profile" role="tabpanel">
											<div class="profile-setting">
												<form action="/admin/users/profile/<%= id %>" method="POST" enctype="multipart/form-data">
													<ul class="profile-edit-list row">
														<li class="weight-500 col-md-12">
															<div class="row">
																<div class="col-md-6 col-sm-12">
																	<div class="form-group">
																		<label>First Name:</label>
																		<% if(firstname == ''){ %>
																		<input class="form-control form-control-lg" type="text" name="firstname" id="firstname" placeholder="Sam..."  required/>
																		<% } else { %>
																		<input class="form-control form-control-lg" type="text" name="firstname" id="firstname" value="<%= firstname %>" placeholder="Sam..." />
																		<% } %>
																	</div>
																</div>

																<div class="col-md-6 col-sm-12">
																	<div class="form-group">
																		<label>Last Name:</label>
																		<% if(lastname == ''){ %>
																			<input class="form-control form-control-lg" type="text" name="lastname" id="lastname" placeholder="Smith..." required/>
																		<% } else { %>
																			<input class="form-control form-control-lg" type="text" name="lastname" id="lastname" value="<%= lastname %>" placeholder="Smith...">
																		<% } %>
																	</div>
																</div>
															</div>
															<div class="row">
																<div class="col-md-6 col-sm-12">
																	<div class="form-group">
																		<label>Email Address:</label>
																		<% if(email == '') { %>
																			<input class="form-control form-control-lg" type="email" name="email" id="email" placeholder="examplem@email.com" />
																		<% } else { %>
																			<input class="form-control form-control-lg" type="email" name="email" id="email" value="<%= email %>"  placeholder="examplem@email.com" />
																		<% } %>
																	</div>
																</div>

																<div class="col-md-6 col-sm-12">
																	<div class="form-group">
																		<label>Contact:</label>
																		<% if( contact == '' ) { %>
																			<input class="form-control form-control-lg" type="text" name="contact" id="contact" placeholder="(+856)-20-2345-6789 Or ID" required/>
																		<% } else { %>
																			<input class="form-control form-control-lg" type="text" name="contact" id="contact" value="<%= contact %>" placeholder="(+856)-20-2345-6789 Or ID" />
																		<% } %>
																	</div>
																</div>

																<div class="col-md-6 col-sm-12">
																	<div class="form-group">
																		<label>Phone</label>
																		<% if( phone == '' ){ %>
																			<input class="form-control form-control-lg" type="text" name="phone" id="phone"  placeholder="030-2345-678" required/>
																		<% }else{ %>
																			<input class="form-control form-control-lg" type="text" name="phone" id="phone" value="<%= phone %>" placeholder="030-2345-678" />
																		<% } %>
																	</div>
																</div>


																<div class="col-md-6 col-sm-12">
																	<div class="form-group">
																		<label>Date of birth</label>
																		<% if( dob == null) { %>
																			<input class="form-control date-picker" type="text" name="dob" id="dob"  placeholder="19-09-1999"  required/>
																		<% }else{ %>
																			<input class="form-control date-picker" type="text" name="dob" id="dob" value="<%= dob %>" placeholder="19-09-1999" />
																		<% } %>
																	</div>
																</div>

																<div class="col-md-12 col-sm-12">
																	<div class="form-group">
																		<label>Position:</label>
																		<% if(position == ''){ %>
																		<input class="form-control form-control-lg" type="text" name="position" id="position"  placeholder="ວິສະວະກອນພັງ ແລະ ໂຄງສ້າງ (Structure Engineer)" required/>
																		<% }else { %>
																		<input class="form-control form-control-lg" type="text" name="position" id="position" value="<%= position %>"  placeholder="ວິສະວະກອນພັງ ແລະ ໂຄງສ້າງ (Structure Engineer)" />
																		<% } %>
																	</div>
																</div>

																<div class="col-md-12 col-sm-12">
																	<div class="form-group">
																		<label>Biography:</label>
																		<% if( bio == '') { %>
																			<textarea class="form-control" name="bio" id="bio" placeholder="ex: I was born ..."></textarea>
																		<% }else { %>
																			<textarea class="form-control" name="bio" id="bio" placeholder="ex: I was born ..."><%= bio %></textarea>
																		<% } %>
																	</div>
																</div>

																<div class="col-md-6 col-sm-12">
																	<div class="form-group">
																		<label>Address</label>
																		<% if( address == '' ) { %>
																		<input class="form-control form-control-lg" type="text" name="address" id="address" placeholder="23, Road JFK back street, Washington D.C, USA" required/>
																		<% } else { %>
																		<input class="form-control form-control-lg" type="text" name="address" id="address" value="<%= address %>" placeholder="23, Road JFK back street, Washington D.C, USA" />
																		<% } %>
																	</div>
																</div>

																<div class="col-md-6 col-sm-12">
																	<div class="form-group">
																		<label>City:</label>
																		<% if( city == '' ) { %>
																		<input class="form-control form-control-lg" type="text" name="city" id="city" placeholder="Saythany District..." required/>
																		<% } else { %>
																		<input class="form-control form-control-lg" type="text" name="city" id="city" value="<%= city %>" placeholder="Saythany District..." />
																		<% } %>
																	</div>
																</div>

																<div class="col-md-6 col-sm-12">
																	<div class="form-group">
																		<label>State/Province/Region</label>
																		<% if( province == '') { %>
																		<input class="form-control form-control-lg" type="text" name="province" id="province"  placeholder="ex: Vientiane Capital" required/>
																		<% }else { %>
																		<input class="form-control form-control-lg" type="text" name="province" id="province" value="<%= province %>" placeholder="ex: Vientiane Capital">
																		<% } %>
																	</div>
																</div>

																<div class="col-md-6 col-sm-12">
																	<div class="form-group">
																		<label>Country</label>
																		<% if( country == '') {%>
																				<select class="selectpicker form-control form-control-lg" name="country" id="country" data-style="btn-outline-secondary btn-lg" title="Select Country">
																					<option value="China">China</option>
																					<option value="India">India</option>
																					<option value="Laos">Laos</option>
																					<option value="Philipine">Philippine</option>
																					<option value="Thailand">Thailand</option>
																					<option value="Vietname">Vietname</option>
																				</select>
																			<% }else { %>
																				<select class="selectpicker form-control form-control-lg" name="country" id="country" data-style="btn-outline-secondary btn-lg" title="Select Country">
																					<option value="<%= country %>"><%= country %></option>
																					<hr>
																					<option value="China">China</option>
																					<option value="India">India</option>
																					<option value="Laos">Laos</option>
																					<option value="Philipine">Philippine</option>
																					<option value="Thailand">Thailand</option>
																					<option value="Vietname">Vietname</option>
																				</select>
																		<% } %>
																	</div>
																</div>

																<div class="col-md-12 col-sm-12">
																	<div class="form-group">
																		<label>Image File</label>
																		<% if( image == '' ) { %>
																		<input class="form-control form-control-lg" type="file" name="profileImage" id="formFile" placeholder="profile image"  required/>
																		<% } else { %>
																			<input class="form-control form-control-lg" type="file" name="profileImage" id="formFile" placeholder="profile image" required/>
																		<% } %>
																	</div>
																</div>


															</div>
															<div class="form-group">
																<div class="custom-control custom-checkbox mb-5">
																	<input type="checkbox" class="custom-control-input" id="customCheck1-1">
																	<label class="custom-control-label weight-400" for="customCheck1-1">I agree to receive notification emails</label>
																</div>
															</div>
															<div class="form-group mb-0">
																<input type="submit" class="btn btn-primary" value="Update">
															</div>
														</li>
													</ul>
												</form>
											</div>
										</div>
										<!-- Setting Tab End -->
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<%- include('../../partials/footer')%>
		</div>
	</div>
	<%- include('../../partials/script')%>
</body>
</html>