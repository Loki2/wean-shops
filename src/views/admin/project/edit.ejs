<!DOCTYPE html>
<html>
  <%- include('../../partials/header')%>
<body>
  <%- include('../../partials/navigation')%>

  <%- include('../../partials/sidebar')%>

	<div class="main-container">
		<div class="pd-ltr-20">
      				<!-- Form grid Start -->
				<div class="pd-20 card-box mb-10">
					<div class="clearfix">
						<div class="pull-left">
							<h4 class="text-blue h4">Update Project</h4>
						</div>
						<div class="pull-right">
							<a href="/admin/projects" class="btn btn-outline-primary btn-sm scroll-click">ກັບຄືນ</a>
						</div>
					</div>
					<form action="/admin/projects/edit/<%= id %>" method="POST" enctype="multipart/form-data">
						<div class="row">
              <div class="col-md-6 col-sm-12">
								<div class="form-group">
									<label>Project Name Lao*</label>
									<input type="text" name="name_lao" id="name_lao" value="<%= name_lao %>" class="form-control" placeholder="Project Name Lao..." required>
								</div>
							</div>

              <div class="col-md-6 col-sm-12">
								<div class="form-group">
									<label>Project Name Eng*</label>
									<input type="text" name="name_eng" id="name_eng" value="<%= name_eng %>" class="form-control" placeholder="Project Name Eng..." required>
								</div>
							</div>
														
              <div class="col-md-12 col-sm-12">
								<div class="form-group">
									<label>Description*</label>
                  <!-- <textarea type="text" name="desc" id="desc" class="textarea_editor form-control border-radius-5" maxlength="150" placeholder="ໃສ່ຄຳອະທີບາຍ (150ອັກສອນ) ..."></textarea> -->
                  <textarea type="text" name="desc" id="desc" class="form-control" maxlength="150" placeholder="Description (100 Characters) ..."><%= desc %></textarea>
								</div>
							</div>
						</div>
						<hr>
						<div class="row">
              <div class="col-md-3 col-sm-12">
								<div class="form-group">
									<label>Project Image</label>
									<input type="file" name="projectImage" id="formFile" class="form-control" value="<%= image %>" accept="image/jpg, image/jpeg, image/png"/>
								</div>
							</div>
              <div class="col-md-4 col-sm-12">
								<div class="form-group">
									<label>Select Customer</label>
									<select class="custom-select2 form-control" name="customer" style="width: 100%; height: 35px;">
										<% customers.forEach(function(customer) { %>	
                    <option value="<%= customer._id %>"><%= customer.name_lao %> <%= customer.name_eng %></option>
                    <% }); %>
									</select>
								</div>
							</div>
							<div class="col-md-3 col-sm-12">
								<div class="form-group">
									<label>Remark</label>
									<input type="text" name="remark" id="remark" class="form-control" value="<%= remark %>" placeholder="Enter Remark..." required>
									<!-- <select class="custom-select2 form-control" name="slug" style="width: 100%; height: 35px;">
											<option value="">aaaa</option>
									</select> -->
								</div>
							</div>
              <div class="col-md-2 col-sm-12">
								<div class="form-group">
									<label>Status*</label>
									<select class="custom-select2 form-control" name="status" id="status" style="width: 100%; height: 35px;"required>
										<option value="<%= status %>"><%= status %></option>
                    <hr>
                    <option value="active">Active</option>
										<option value="inactive">Inactive</option>
									</select>
								</div>
							</div>
						</div>
            <button type="submit" class="btn btn-outline-primary">Submit</button>
						</div>
					</form>
          <div class="collapse collapse-box" id="form-grid-form" >
						<div class="code-box">
							<div class="clearfix">
								<a href="javascript:;" class="btn btn-primary btn-sm code-copy pull-left"  data-clipboard-target="#form-grid"><i class="fa fa-clipboard"></i> Copy Code</a>
								<a href="#form-grid-form" class="btn btn-primary btn-sm pull-right" rel="content-y"  data-toggle="collapse" role="button"><i class="fa fa-eye-slash"></i> Hide Code</a>
							</div>
							<pre>
								<code class="xml copy-pre" id="form-grid">
								</code>
							</pre>
						</div>
					</div>
          <%- include('../../partials/footer')%>
		</div>
	</div>
  <%- include('../../partials/script')%>
</body>
</html>