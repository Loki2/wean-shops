<!DOCTYPE html>
<html>
  <%- include('../../partials/header')%>
<body>
  <%- include('../../partials/navigation')%>

  <%- include('../../partials/sidebar')%>

	<div class="main-container">
		<div class="pd-ltr-20">
      				<!-- Form grid Start -->
				<div class="pd-20 card-box mb-10">
					<div class="clearfix">
						<div class="pull-left">
							<h4 class="text-blue h4">ຟອມອັບເດດຂໍ້ມູນ</h4>
						</div>
						<div class="pull-right">
							<a href="/admin/blogs" class="btn btn-outline-primary btn-sm scroll-click">ກັບຄືນ</a>
						</div>
					</div>
					<form action="/admin/blogs/edit/<%= id %>" method="POST" enctype="multipart/form-data">
						<div class="row">
              <div class="col-md-12 col-sm-12">
								<div class="form-group">
									<label>ຫົວຂໍ້/Title*</label>
									<input type="text" name="title" id="title" class="form-control" value="<%= title %>" placeholder="Title..." required>
								</div>
							</div>
							
              <div class="col-md-12 col-sm-12">
								<div class="form-group">
									<label>ລາຍລະອຽດ/Content*</label>
                  <!-- <textarea type="text" name="desc" id="desc" class="textarea_editor form-control border-radius-5" maxlength="150" placeholder="ໃສ່ຄຳອະທີບາຍ (150ອັກສອນ) ..."></textarea> -->
                  <textarea type="text" name="content" id="content" class="form-control" placeholder="Description (100 Characters) ..."><%= content %></textarea>
								</div>
							</div>
						</div>
						<hr>
						<div class="row">
              <div class="col-md-6 col-sm-12">
								<div class="form-group">
									<label>ຮູບພາບ/Image</label>
									<input type="file" name="blogImage" id="formFile" class="form-control" value="<%= image %>" accept="image/jpg, image/jpeg, image/png"/>
								</div>
							</div>
							<div class="col-md-4 col-sm-12">
								<div class="form-group">
									<label>ເລືອກໝວດ/Select Category</label>
									<!-- <input type="text" name="category" id="category" class="form-control" placeholder="category..." required> -->
									<select class="custom-select2 form-control" name="category" style="width: 100%; height: 35px;">
										<option value="<%= category %>"><%= category %></option>
                    <% categories.forEach(function(category){%>	
                    <option value="<%= category.name_eng %>"><%= category.name_eng %> <%= category.name_lao %></option>
                    <% }); %>
									</select>
								</div>
							</div>
              <div class="col-md-2 col-sm-12">
								<div class="form-group">
									<label>ສະຖານະ/Status*</label>
									<select class="custom-select2 form-control" name="status" id="status" style="width: 100%; height: 35px;"required>
										<option value="<%= status %>"><%= status %></option>
                    <option value="active">Active</option>
										<option value="inactive">Inactive</option>
									</select>
								</div>
							</div>
						</div>
            <button type="submit" class="btn btn-outline-primary">Update</button>
						</div>
					</form>
          <div class="collapse collapse-box" id="form-grid-form" >
						<div class="code-box">
							<div class="clearfix">
								<a href="javascript:;" class="btn btn-primary btn-sm code-copy pull-left"  data-clipboard-target="#form-grid"><i class="fa fa-clipboard"></i> Copy Code</a>
								<a href="#form-grid-form" class="btn btn-primary btn-sm pull-right" rel="content-y"  data-toggle="collapse" role="button"><i class="fa fa-eye-slash"></i> Hide Code</a>
							</div>
							<pre>
								<code class="xml copy-pre" id="form-grid">
								</code>
							</pre>
						</div>
					</div>
          <%- include('../../partials/footer')%>
		</div>
	</div>
  <%- include('../../partials/script')%>
</body>
</html>