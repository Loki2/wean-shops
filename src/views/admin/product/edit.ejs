<!DOCTYPE html>
<html>
  <%- include('../../partials/header')%>
<body>
  <%- include('../../partials/navigation')%>

  <%- include('../../partials/sidebar')%>

	<div class="main-container">
		<div class="pd-ltr-20">
      				<!-- Form grid Start -->
				<div class="pd-20 card-box mb-10">
					<div class="clearfix">
						<div class="pull-left">
							<h4 class="text-blue h4">Update Information</h4>
						</div>
						<div class="pull-right">
							<a href="/admin/products" class="btn btn-outline-primary btn-sm scroll-click">ກັບຄືນ</a>
						</div>
					</div>
					<form action="/admin/products/edit/<%= id %>" method="POST" enctype="multipart/form-data">
						<div class="row">
              <div class="col-md-2 col-sm-12">
								<div class="form-group">
									<label>Product Code*</label>
									<input type="text" name="code" id="code" value="<%= code %>" class="form-control" placeholder="PRO-0012..." required>
								</div>
							</div>


              <div class="col-md-5 col-sm-12">
								<div class="form-group">
									<label>Product Name Lao*</label>
									<input type="text" name="name_lao" id="name_lao" value="<%= name_lao %>" class="form-control" placeholder="Product Name Lao..." required>
								</div>
							</div>

              <div class="col-md-5 col-sm-12">
								<div class="form-group">
									<label>Product Name Eng*</label>
									<input type="text" name="name_eng" id="name_eng" value="<%= name_eng %>" class="form-control" placeholder="Product Name Eng..." required>
								</div>
							</div>
														
              <div class="col-md-12 col-sm-12">
								<div class="form-group">
									<label>Description*</label>
                  <!-- <textarea type="text" name="desc" id="desc" class="textarea_editor form-control border-radius-5" maxlength="150" placeholder="ໃສ່ຄຳອະທີບາຍ (150ອັກສອນ) ..."></textarea> -->
                  <textarea type="text" name="desc" id="desc" class="form-control" maxlength="150" placeholder="Description (100 Characters) ..."><%= desc %></textarea>
								</div>
							</div>
						</div>
						<hr>
						<div class="row">
              <div class="col-md-6 col-sm-12">
								<div class="form-group">
									<label>Product Image</label>
									<input type="file" name="productImage" id="formFile" class="form-control" accept="image/jpg, image/jpeg, image/png"/>
								</div>
							</div>
              <div class="col-md-4 col-sm-12">
								<div class="form-group">
									<label>Select Category</label>
									<select class="custom-select2 form-control" name="service" style="width: 100%; height: 35px;">
                    <% services.forEach(function(service){ %>
                    <option value="<%= service._id %>"><%= service.name_lao %> - <%= service.name_eng %></option>
                    <% }) %>
									</select>
								</div>
							</div>
              <div class="col-md-2 col-sm-12">
								<div class="form-group">
									<label>Status*</label>
									<select class="custom-select2 form-control" name="status" id="status" style="width: 100%; height: 35px;"required>
										<option value="active">Active</option>
										<option value="inactive">Inactive</option>
									</select>
								</div>
							</div>
							<br>
							<hr>
							<div class="col-md-12 col-sm-12">
								<div class="dropzone" action="#" id="my-awesome-dropzone">
									<div class="fallback">
										<input type="file" name="file" multiple/>
									</div>
								</div>
							</div>
							<br>
							<hr>
						</div>
            <button type="submit" class="btn btn-outline-primary">Submit</button>
						</div>
					</form>
          <div class="collapse collapse-box" id="form-grid-form" >
						<div class="code-box">
							<div class="clearfix">
								<a href="javascript:;" class="btn btn-primary btn-sm code-copy pull-left"  data-clipboard-target="#form-grid"><i class="fa fa-clipboard"></i> Copy Code</a>
								<a href="#form-grid-form" class="btn btn-primary btn-sm pull-right" rel="content-y"  data-toggle="collapse" role="button"><i class="fa fa-eye-slash"></i> Hide Code</a>
							</div>
							<pre>
								<code class="xml copy-pre" id="form-grid">
								</code>
							</pre>
						</div>
					</div>
      <%- include('../../partials/footer')%>
		</div>
	</div>
  <%- include('../../partials/script')%>
</body>
</html>