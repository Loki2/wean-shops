<!DOCTYPE html>
<html>
  <%- include('../../partials/header')%>
<body>
  <%- include('../../partials/navigation')%>

  <%- include('../../partials/sidebar')%>

	<div class="main-container">
		<div class="pd-ltr-20">
      				<!-- Form grid Start -->
				<div class="pd-20 card-box mb-10">
					<div class="clearfix">
						<div class="pull-left">
							<h4 class="text-blue h4">Update customer information form</h4>
						</div>
						<div class="pull-right">
							<a href="/admin/customers" class="btn btn-outline-primary btn-sm scroll-click">ກັບຄືນ</a>
						</div>
					</div>
					<form action="/admin/customers/edit/<%= id %>" method="POST" enctype="multipart/form-data">
						<div class="row">
              <div class="col-md-6 col-sm-12">
								<div class="form-group">
									<label>Organize Name Lao*</label>
									<input type="text" name="name_lao" id="name_lao" value="<%= name_lao %>" class="form-control" placeholder="Organize Name Lao..." required>
								</div>
							</div>

              <div class="col-md-6 col-sm-12">
								<div class="form-group">
									<label>Organize Name Eng*</label>
									<input type="text" name="name_eng" id="name_eng" value="<%= name_eng %>" class="form-control" placeholder="Organize Name Lao..." required>
								</div>
							</div>
														
              <div class="col-md-12 col-sm-12">
								<div class="form-group">
									<label>Description*</label>
                  <!-- <textarea type="text" name="desc" id="desc" class="textarea_editor form-control border-radius-5" maxlength="150" placeholder="ໃສ່ຄຳອະທີບາຍ (150ອັກສອນ) ..."></textarea> -->
                  <textarea type="text" name="desc" id="desc" class="form-control" placeholder="Description (100 Characters) ..."><%= desc %></textarea>

								</div>
							</div>
						</div>
						<hr>
            <div class="row">
              <div class="col-md-6 col-sm-12">
								<div class="form-group">
									<label>Address1*</label>
									<input type="text" name="address_1" id="address_1" value="<%= address_1 %>" class="form-control" placeholder="Enter Address 1..." required>
								</div>
							</div>

              <div class="col-md-6 col-sm-12">
								<div class="form-group">
									<label>Address2*</label>
									<input type="text" name="address_2" id="address_2" value="<%= address_2 %>" class="form-control" placeholder="Enter Address 2..." required>
								</div>
							</div>

              <div class="col-md-4 col-sm-12">
								<div class="form-group">
									<label>City*</label>
									<input type="text" name="city" id="city" value="<%= city %>" class="form-control" placeholder="Enter City..." required>
								</div>
							</div>

              <div class="col-md-4 col-sm-12">
								<div class="form-group">
									<label>Province/State*</label>
									<input type="text" name="state" id="state" value="<%= state %>" class="form-control" placeholder="Enter Province or State..." required>
								</div>
							</div>

              <div class="col-md-4 col-sm-12">
								<div class="form-group">
									<label>Country*</label>
									<input type="text" name="country" id="country" value="<%= country %>" class="form-control" placeholder="Enter Country..." required>
								</div>
							</div>
            </div>

            <div class="row">
              <div class="col-md-2 col-sm-12">
								<div class="form-group">
									<label>Contact*</label>
									<input type="text" name="contact" id="contact" value="<%= contact %>" class="form-control" placeholder="Enter Contact or Line ID etc,..." required>
								</div>
							</div>


              <div class="col-md-2 col-sm-12">
								<div class="form-group">
									<label>Phone*</label>
									<input type="text" name="phone" id="phone" value="<%= phone %>" class="form-control" placeholder="Enter Phone..." required>
								</div>
							</div>

              <div class="col-md-4 col-sm-12">
								<div class="form-group">
									<label>Link*</label>
									<input type="text" name="link" id="link" value="<%= site %>" class="form-control" placeholder="https://www.example.com..." required>
								</div>
							</div>

              <div class="col-md-4 col-sm-12">
								<div class="form-group">
									<label>Facebook Page*</label>
									<input type="text" name="facebook" id="facebook" value="<%= facebook %>" class="form-control" placeholder="https://www.facebook.com/example_n97..." required>
								</div>
							</div>
            </div>

						<div class="row">
              <div class="col-md-6 col-sm-12">
								<div class="form-group">
									<label>Logo Image</label>
									<input type="file" name="logoImage" id="formFile" value="<%= logo %>" class="form-control" accept="image/jpg, image/jpeg, image/png"/>
								</div>
							</div>
							<div class="col-md-4 col-sm-12">
								<div class="form-group">
									<label>Remark</label>
									<input type="text" name="remark" id="remark" value="<%= remark %>" class="form-control" placeholder="Enter Remark..." required>
									<!-- <select class="custom-select2 form-control" name="slug" style="width: 100%; height: 35px;">
											<option value="">aaaa</option>
									</select> -->
								</div>
							</div>
              <div class="col-md-2 col-sm-12">
								<div class="form-group">
									<label>Status*</label>
									<select class="custom-select2 form-control" name="status" id="status" style="width: 100%; height: 35px;"required>
										<option value="<%= status %>"><%= status %></option>
                    <hr>
                    <option value="active">Active</option>
										<option value="inactive">Inactive</option>
									</select>
								</div>
							</div>
						</div>
            <button type="submit" class="btn btn-outline-primary">Update</button>
						</div>
					</form>
          <div class="collapse collapse-box" id="form-grid-form" >
						<div class="code-box">
							<div class="clearfix">
								<a href="javascript:;" class="btn btn-primary btn-sm code-copy pull-left"  data-clipboard-target="#form-grid"><i class="fa fa-clipboard"></i> Copy Code</a>
								<a href="#form-grid-form" class="btn btn-primary btn-sm pull-right" rel="content-y"  data-toggle="collapse" role="button"><i class="fa fa-eye-slash"></i> Hide Code</a>
							</div>
							<pre>
								<code class="xml copy-pre" id="form-grid">
								</code>
							</pre>
						</div>
					</div>
          <%- include('../../partials/footer')%>
		</div>
	</div>
  <%- include('../../partials/script')%>
</body>
</html>