<!DOCTYPE html>
<html>
  <%- include('../../partials/header')%>
<body>

  <%- include('../../partials/navigation')%>

  <%- include('../../partials/sidebar')%>

	<div class="main-container">
		<div class="pd-ltr-20">
      <div class="page-header">
        <div class="row">
          <div class="col-md-6 col-sm-12">
            <div class="title">
              <h4>Website Banners</h4>
            </div>
            <nav aria-label="breadcrumb" role="navigation">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Banners</li>
              </ol>
            </nav>
          </div>
          <div class="col-md-6 col-sm-12 text-right">
            <div class="dropdown">
              <a class="btn btn-primary" href="/admin/banners/create-banner" role="button">
                Create
              </a>
            </div>
          </div>
        </div>
      </div>
			<div class="card-box mb-30">
				<h2 class="h4 pd-20">Website Banners</h2>
				<table class="data-table table nowrap">
					<thead>
						<tr>
							<th class="table-plus datatable-nosort">Image</th>
							<th>Title</th>
							<th>Description</th>
							<th>Slug</th>
							<th>Status</th>
							<th>Created At</th>
							<th class="datatable-nosort">Action</th>
						</tr>
					</thead>
					<% if(typeof banners !== 'undefined') { %>
							<tbody>
								<% banners.forEach(function(banner){%>
									<tr>
										<td class="table-plus">
											<% if(banner.image == "") { %>
												<img src="/uploads/noimage.png" width="70" height="70" alt="">
											<% } else { %>
												<img src="/uploads/images/banners/<%= banner._id %>/<%= banner.image %>" width="70" height="70" alt="">
											<% } %>
										</td>
										<td>
											<h5 class="font-16"><%= banner.code %></h5>
											<%= banner.title %>
										</td>
										<td><%= banner.desc %></td>
										<td><%= banner.slug %></td>
										<td><%= banner.status %></td>
										<td><%= banner.createdAt.toLocaleString() %></td>
										<td>
											<div class="dropdown">
												<a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
													<i class="dw dw-more"></i>
												</a>
												<div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
													<a class="dropdown-item" href="/admin/banners/view/<%= banner._id %>"><i class="dw dw-eye"></i> View</a>
													<a class="dropdown-item" href="/admin/banners/edit/<%= banner._id %>"><i class="dw dw-edit2"></i> Edit</a>
													<a class="dropdown-item" href="/admin/banners/delete/<%= banner._id %>"><i class="dw dw-delete-3"></i> Delete</a>
												</div>
											</div>
										</td>
									</tr>
									<% }) %>
							</tbody>
						<%} else { %>
							<tbody>
								<tr>
									<td class="table-plus">
										<img src="/uploads/noimage.png" width="70" height="70" alt="">
									</td>
									<td>
										<h5 class="font-16">Empty...</h5>
										Banner
									</td>
									<td></td>
									<td></td>
									<td></td>
									<td>
										<div class="dropdown">
											<a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
												<i class="dw dw-more"></i>
											</a>
											<div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
												<a class="dropdown-item" href="#"><i class="dw dw-eye"></i> View</a>
												<a class="dropdown-item" href="#"><i class="dw dw-edit2"></i> Edit</a>
												<a class="dropdown-item" href="#"><i class="dw dw-delete-3"></i> Delete</a>
											</div>
										</div>
									</td>
								</tr>
							</tbody>
					<% } %>					
				</table>
			</div>
			<%- include('../../partials/footer')%>
		</div>
	</div>
	<!-- js -->
  <%- include('../../partials/script')%>
</body>
</html>