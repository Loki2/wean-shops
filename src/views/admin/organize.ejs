<!DOCTYPE html>
<html>
<%- include('../partials/header')%>
<body>
  <%- include('../partials/navigation')%>

  <%- include('../partials/sidebar')%>

	<div class="main-container">
		<div class="pd-ltr-20 xs-pd-20-10">
			<div class="min-height-200px">
				<div class="page-header">
					<div class="row">
						<div class="col-md-12 col-sm-12">
							<div class="title">
								<h4>Organize Information</h4>
							</div>
							<nav aria-label="breadcrumb" role="navigation">
								<ol class="breadcrumb">
									<li class="breadcrumb-item"><a href="/admin">Home</a></li>
									<li class="breadcrumb-item active" aria-current="page">Organize Profile</li>
								</ol>
							</nav>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 mb-30">
						<div class="pd-20 card-box height-100-p">
							<div class="profile-photo">
								<a href="modal" data-toggle="modal" data-target="#modal" class="edit-avatar"><i class="fa fa-pencil"></i></a>
								<img src="/frontend/images/3s_logo.png" alt="" class="avatar-photo">
								<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
									<div class="modal-dialog modal-dialog-centered" role="document">
										<div class="modal-content">
											<div class="modal-body pd-5">
												<div class="img-container">
													<img id="image" src="/frontend/images/3s_logo.png" alt="Picture">
												</div>
											</div>
											<div class="modal-footer">
												<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
											</div>
										</div>
									</div>
								</div>
							</div>
							<h5 class="text-center h5 mb-0"><%= name_eng %> | <%= name_lao%></h5>
							<p class="text-center text-muted font-14"><%= desc %></p>
							<div class="profile-info">
								<h5 class="mb-20 h5 text-blue">Information</h5>
								<ul>
									<li>
										<span>Email Address:</span>
										<%= email %>
									</li>
									<li>
										<span>Phone Number:</span>
										<%= phone %>
									</li>
									<li>
										<span>Address:</span>
										<%= address %>
									</li>
									<li>
										<span>City:</span>
										<%= city %>
									</li>
									<li>
										<span>Province/State/Region:</span>
										<%= province %>
									</li>
									<li>
										<span>Country:</span>
										<%= country %>
									</li>
								</ul>
							</div>
							<div class="profile-social">
								<h5 class="mb-20 h5 text-blue">Social Links</h5>
								<ul class="clearfix">
									<li><a href="#" class="btn" data-bgcolor="#3b5998" data-color="#ffffff"><i class="fa fa-facebook"></i></a></li>
									<li><a href="#" class="btn" data-bgcolor="#1da1f2" data-color="#ffffff"><i class="fa fa-twitter"></i></a></li>
									<li><a href="#" class="btn" data-bgcolor="#007bb5" data-color="#ffffff"><i class="fa fa-linkedin"></i></a></li>
								</ul>
							</div>
							<div class="profile-skills">
								<h5 class="mb-20 h5 text-blue">Website:</h5>
								<h6 class="mb-5 font-14">http://www.3s-laos.com</h6>
							</div>
						</div>
					</div>
					<div class="col-xl-8 col-lg-8 col-md-8 col-sm-12 mb-30">
						<div class="card-box height-100-p overflow-hidden">
							<div class="profile-tab height-100-p">
								<div class="tab height-100-p">
									<ul class="nav nav-tabs customtab" role="tablist">
										<li class="nav-item active">
											<a class="nav-link" data-toggle="tab" href="#setting" role="tab">Settings</a>
										</li>
									</ul>
									<div class="tab-content">
										<!-- Setting Tab start -->
										<div class="tab-pane fade height-100-p show active" id="setting" role="tabpanel">
											<div class="profile-setting">
												<form method="POST" action="/admin/org/update/<%= id %>" enctype="multipart/form-data">
													<ul class="profile-edit-list row">
														<li class="weight-500 col-md-12">
															<div class="row">

                                <div class="col-md-6 col-sm-12">
                                  <div class="form-group">
                                    <label>Org Name Lao</label>
                                    <input class="form-control form-control-lg" name="name_lao" value="<%= name_lao %>" type="text" placeholder="ບໍລິສັດ .... ຈຳກັດ" required>
                                  </div>
                                </div>
                                
                                <div class="col-md-6 col-sm-12">
                                  <div class="form-group">
                                    <label>Org Name Eng</label>
                                    <input class="form-control form-control-lg" type="text" name="name_eng" value="<%= name_eng %>" placeholder="company ... LTD" required>
                                  </div>
                                </div>

                                <div class="col-md-12 col-sm-12">
                                  <div class="form-group">
                                    <label>Description</label>
                                    <input class="form-control" name="desc" value="<%= desc %>" placeholder="Enter description text ..."/>
                                  </div>
                                </div>
                                

                                <div class="col-md-12 col-sm-12">
                                  <div class="form-group">
                                    <label>About Org Biography</label>
                                    <textarea class="form-control" name="bio" placeholder="Enter description text ..."><%= bio %></textarea>
                                  </div>
                                </div>

                                <div class="col-md-6 col-sm-12">
                                  <div class="form-group">
                                    <label>Phone</label>
                                    <input class="form-control form-control-lg" name="phone" type="text" value="<%= phone %>" placeholder="021 xxx-xxxx" required>
                                  </div>
                                </div>

                                <div class="col-md-6 col-sm-12">
                                  <div class="form-group">
                                    <label>Contact</label>
                                    <input class="form-control form-control-lg" type="text" name="contact" value="<%= contact %>" placeholder="(+856)20-xxxx-xxxx" required>
                                  </div>
                                </div>

                                <div class="col-md-6 col-sm-12">
                                  <div class="form-group">
                                    <label>Email</label>
                                    <input class="form-control form-control-lg" type="email" name="email" value="<%= email %>" placeholder="info@example.com" required>
                                  </div>
                                </div>

                                <div class="col-md-6 col-sm-12">
                                  <div class="form-group">
                                    <label>Address</label>
                                    <input class="form-control form-control-lg" type="text" name="address" value="<%= address %>" placeholder="John JFK St, 24 Avenue, Manhattan" required>
                                  </div>
                                </div>
                                
                                <div class="col-md-6 col-sm-12">
                                  <div class="form-group">
                                    <label>City</label>
                                    <input class="form-control form-control-lg" type="text" name="city" value="<%= city %>" placeholder="New York Ciy" required>
                                  </div>
                                </div>
                               
                                <div class="col-md-6 col-sm-12">
                                  <div class="form-group">
                                    <label>State/Province/Region</label>
                                    <input class="form-control form-control-lg" type="text" name="province" value="<%= province %>" placeholder="New York" required>
                                  </div>
                                </div>
                                
                                <div class="col-md-6 col-sm-12">
                                  <div class="form-group">
                                    <label>Country</label>
                                    <input class="form-control form-control-lg" type="text" name="country" value="<%= country %>" placeholder="USA" required>
                                  </div>
                                </div>
                                
                                <div class="col-md-6 col-sm-12">
                                  <div class="form-group">
                                    <label>Found Date</label>
                                    <input class="form-control form-control-lg date-picker" type="text" value="<%= found_date %>" name="found_date" required>
                                  </div>
                                </div>

                                <div class="col-md-12 col-sm-12">
                                  <div class="form-group">
                                    <label>Org Chart Image/ຮູບໂຄງສ້າງບໍລິສັດ</label>
                                    <input class="form-control form-control-lg" type="file" name="orgchartImage" id="formFile" placeholder="profile image" disabled/>
                                  </div>
                                </div>
                                
                                <div class="col-md-12 col-sm-12">
                                  <div class="form-group mb-0">
                                    <input type="submit" class="btn btn-primary" value="Update Information">
                                  </div>
                                </div>
                                
                              </div>
														</li>
													</ul>
												</form>
											</div>
										</div>
										<!-- Setting Tab End -->
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<%- include('../partials/footer')%>
		</div>
	</div>
	<%- include('../partials/script')%>
</body>
</html>